<?xml version="1.0"?>
<ruleset name="BlogsHQ">
	<description>WordPress Coding Standards for BlogsHQ</description>
	<rule ref="WordPress-Core"/>
	<rule ref="WordPress-Docs"/>
	<rule ref="WordPress-Extra">
		<exclude name="WordPress.Files.FileName"/>
	</rule>
	<arg name="extensions" value="php"/>
	<arg name="ignore" value="vendor/,tests/,build/"/>
</ruleset>